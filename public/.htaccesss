RewriteEngine On
RewriteRule ^(.+)\.localhost:3000\/assets\/(.+)$ /store_assets/$1/$2

# Internally rewrite <subdomain>.example.com/<URLpath> to example.com/subs/<subdomain/<URLpath> 
RewriteCond $1 !^subs/ 
RewriteCond %{HTTP_HOST} !^www\.localhost:3000
RewriteCond %{HTTP_HOST} ^([^.]+)\.localhost:3000
RewriteRule (.*) /store_assets/%1/$1 [L]