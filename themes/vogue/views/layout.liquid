<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	{{ shop.head }}
	{{ 'stylesheet.css' | asset_url }}
</head>

<body>
	<div id="header">
		<div class="container">
			<div id="logo">
				<h1><a href="/" title="{{ shop.name }}">{{ shop.name }}</a></h1>
			</div>
			<div id="navigation">
				<ul id="navigate">
					{% for link in shop.menu %}
						<li><a href="{{ link.href }}" class="{% if link.current %}current{% else %}normal{% endif %}">{{ link.name }}</a></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

	<div id="mini-header">
		<div class="container">
			<div id="shopping-cart">
				<a href="/cart">Koszyk jest pusty</a>
			</div>
			<div id="search-box">
				<form action="/search" method="get">
					<input type="text" name="q" id="q" />
					<input type="image" src="/assets/seek.png" value="Seek" id="seek" onclick="this.parentNode.submit(); return false;" />
				</form>
			</div>
		</div>
	</div>

	<div id="layout">
		<div class="container">
			{{ content_for_layout }}
		</div>
	</div>

	<div id="footer">
		<div id="footer-fader">
			<div class="container">
				<div id="footer-right">
					<a href="#">Mama</a>
					<a href="#">Mama</a>
					<a href="#">Mama</a>
				</div>
				<span id="footer-left">
					Copyright &copy; {{ "now" | date: "%Y" }} <a href="/">{{ shop.name }}</a>. All Rights Reserved.<br />
					Designed by <a href="http://sofamade.com">Sofamade</a>.
				</span>
			</div>
		</div>
	</div>
</body>
</html>