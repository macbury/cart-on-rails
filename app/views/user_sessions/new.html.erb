<h2>Logowanie</h2>

<div class="box">
	<% form_for @user_session do |f| %>
	  <p>
	    <span>
	    	<%= f.label :email, 'E-Mail:' %>
	    </span>
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <span>
	    	<%= f.label :password, 'Hasło:' %>
	    </span>
	    <%= f.password_field :password %>
	  </p>
		
		<p>
			<%= f.check_box :remember_me %> Zapamiętaj mnie na tym komputerze
		</p>
		
	  <p>
			<span class="button">
				<input type="submit" value="Zaloguj"/>
			</span>
			<span class="clear"></span>
		</p>
		
	<% end %>
</div>




